<div class="container mt-5">
  <h2 class="mb-4">Log In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation' }) do |f| %>
    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading">There were some errors with your submission:</h4>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, class: "form-control", autofocus: true, required: true %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="form-group mb-4">
      <%= f.submit "Log in", class: "btn btn-primary w-100" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>